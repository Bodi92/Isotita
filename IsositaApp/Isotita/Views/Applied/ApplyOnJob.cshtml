@model Isotita.Models.AppliedViewModel

@{
    ViewData["Title"] = "ApplyOnJob";
}
@if (TempData["AppliedExist"] != null)
{
    <p class="alert alert-danger">@TempData["AppliedExist"]</p>
}
<h1>Solliciteren op vacature</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyOnJob" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="JobId" value="@ViewData["jobId"].ToString()" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CV" class="control-label"></label>
                <input type="file" accept="application/pdf" asp-for="CV" class="form-control" />
                <span asp-validation-for="CV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotivationLetter" class="control-label"></label>
                <input type="file" accept="application/pdf" asp-for="MotivationLetter" class="form-control" />
                <span asp-validation-for="MotivationLetter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Solliciteren" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-jobId="@ViewData["jobId"]">Terug naar vacaturegegevens</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
